<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beg_abs_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#F20D0B0B"
    android:backgroundTintMode="src_over"
    tools:context=".beg_abs">

    <RelativeLayout
        android:id="@+id/work_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exercise_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/abs_beg"
            android:backgroundTint="#48000000"
            android:backgroundTintMode="src_over"
            android:contentDescription="@string/settings" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@drawable/menu_button"
                android:src="@drawable/baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:background="@drawable/menu_button"
                android:src="@drawable/baseline_menu_24" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90sp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:text="@string/abs_beginner"
            android:textSize="30sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130sp"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:text="@string/_9_mins"
            android:textSize="20sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130sp"
            android:layout_marginStart="70dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald"
            android:text="@string/_11_workouts"
            android:textSize="20sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/work_img_layout"
        android:layout_marginTop="-30dp"/>
</RelativeLayout>
