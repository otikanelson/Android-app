<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/survey_back"
    android:backgroundTint="#B90A0B24"
    android:backgroundTintMode="src_over"
    android:padding="10dp"
    tools:context=".q9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#4BA7B1"
            android:fontFamily="@font/oswald"
            android:layout_centerHorizontal="true"
            android:text="@string/how_often_do_you_play_sports"/>

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@+id/Question"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <RadioButton
                android:id="@+id/option2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/option1"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/option3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/option2"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/option4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/option3"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/every_day"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/option1"
                android:layout_alignTop="@+id/option1"
                android:fontFamily="@font/rajdhani"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/once_per_week"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/option2"
                android:layout_alignTop="@+id/option2"
                android:fontFamily="@font/rajdhani"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_regularly"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/option3"
                android:layout_alignTop="@+id/option3"
                android:fontFamily="@font/rajdhani"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/several_times_per_month"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/option4"
                android:layout_alignTop="@+id/option4"
                android:fontFamily="@font/rajdhani"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="@string/next"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cornerRadius="30dp"
            android:layout_alignParentBottom="true"
            android:text="@string/back"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</FrameLayout>